{
  "name": "dfiks/unperm",
  "description": "A Laravel 12 package for Permissions.",
  "version": "v0.0.13-alpha",
  "type": "library",
  "license": "MIT",
  "require": {
    "php": "^8.2",
    "illuminate/support": "^12.0",
    "illuminate/contracts": "^12.0",
    "illuminate/http": "^12.0",
    "guzzlehttp/guzzle": "^7.8|^8.0",
    "spatie/laravel-data": "^4.13",
    "livewire/livewire": "^3.0",
    "ext-gmp": "*"
  },
  "require-dev": {
    "phpunit/phpunit": "^11.5",
    "orchestra/testbench": "^10.0",
    "mockery/mockery": "^1.6",
    "laravel/pint": "^1.21",
    "barryvdh/laravel-ide-helper": "^3.5"
  },
  "autoload": {
    "psr-4": {
      "DFiks\\UnPerm\\": "src/"
    },
    "files": [
      "src/helpers.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "DFiks\\UnPerm\\Tests\\": "tests/"
    }
  },
  "extra": {
    "laravel": {
      "providers": [
        "DFiks\\UnPerm\\UnPermServiceProvider"
      ]
    }
  },
  "scripts": {
    "test": "phpunit --testdox --configuration phpunit.xml",
    "test:filter": "phpunit --testdox --configuration phpunit.xml --filter",
    "lint": "pint --config=pint.json",
    "quality": "vendor/bin/phpstan analyse"
  },
  "config": {
    "sort-packages": true,
    "preferred-install": "dist"
  },
  "minimum-stability": "stable",
  "prefer-stable": true
}
